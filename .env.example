# ============================================
# Mafilu Environment Variables
# Copy this file to .env.local for development
# Copy this file to .env.production for production
# ============================================

# ===========================================
# Supabase Configuration
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# Bunny.net Video Platform (Stream API)
# ===========================================
NEXT_PUBLIC_BUNNY_CDN_URL=your-stream-cdn.b-cdn.net
BUNNY_STREAM_API_KEY=your-stream-api-key
BUNNY_STREAM_LIBRARY_ID=your-video-library-id
# Legacy storage (optional, for thumbnails)
BUNNY_API_KEY=your-bunny-api-key
BUNNY_STORAGE_ZONE=your-storage-zone
BUNNY_STORAGE_PASSWORD=your-storage-password

# ===========================================
# Stripe Payment Gateway
# ===========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs
STRIPE_BASIC_PRICE_ID=price_xxx
STRIPE_PREMIUM_PRICE_ID=price_xxx
STRIPE_PRODUCER_PRO_PRICE_ID=price_xxx

# ===========================================
# Iyzico Payment Gateway (Turkey)
# ===========================================
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# ===========================================
# Redis Cache
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# Application Settings
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Mafilu

# ===========================================
# Security
# ===========================================
NEXTAUTH_SECRET=generate-a-secure-random-string-here
NEXTAUTH_URL=http://localhost:3000
